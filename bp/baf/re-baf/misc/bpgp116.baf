IF
  AttackedBy([GOODCUTOFF],DEFAULT)
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Shout(116)
    Enemy()
END

IF
  HitBy([GOODCUTOFF],CRUSHING)
THEN
  RESPONSE #100
    Shout(116)
    Continue()
END

IF
  See([GOODCUTOFF])
  Allegiance(Myself,ENEMY)
  ActionListEmpty()
THEN
  RESPONSE #100
    Shout(116)
    Continue()
END

IF
  Heard([ANYONE],115)
  Allegiance(Myself,NEUTRAL)
  !Class(Myself,INNOCENT)
THEN
  RESPONSE #100
    Enemy()
    Attack(LastHeardBy(Myself))
END

IF
  Dead("trfued01")  // ~Lady Lilith Lurraxol~
  !See([PC])
THEN
  RESPONSE #100
    DestroySelf()
END

IF
  Allegiance("trfued01",ENEMY)  // ~Lady Lilith Lurraxol~
  Allegiance(Myself,NEUTRAL)
THEN
  RESPONSE #100
    Enemy()
END

IF
  See([0.0.0.0.115])
  HPGT(LastSeenBy(Myself),0)
  OR(2)
    Global("alibakkarjob","GLOBAL",1)
    Global("lurraxoljob","GLOBAL",1)
THEN
  RESPONSE #100
    Attack(LastSeenBy(Myself))
END

