IF
  Allegiance(LastSummonerOf(Myself),EVILCUTOFF)
  !Race(Myself,DEMONIC)
  HaveAnySpells()
THEN
  RESPONSE #100
    Enemy()
    DisplayStringHead(Myself,5196)  // ~I hope my master appreciates my effort~
    ChangeAIScript("",OVERRIDE)
    ChangeAIScript("MAGEHIGH",CLASS)
    ChangeAIScript("",RACE)
    ChangeAIScript("",GENERAL)
    ChangeAIScript("WTARSGT",DEFAULT)
END

IF
  Allegiance(LastSummonerOf(Myself),EVILCUTOFF)
  !Race(Myself,DEMONIC)
  !HaveAnySpells()
THEN
  RESPONSE #100
    Enemy()
    DisplayStringHead(Myself,5196)  // ~I hope my master appreciates my effort~
