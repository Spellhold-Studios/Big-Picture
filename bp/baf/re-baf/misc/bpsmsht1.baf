    ChangeAIScript("WTASIGHT",CLASS)
    ChangeAIScript("",RACE)
    ChangeAIScript("",GENERAL)
    ChangeAIScript("",DEFAULT)
END

IF
  Allegiance(Myself,ALLY)
  HitBy([EVILCUTOFF],CRUSHING)
  Global("SHOUTED","LOCALS",0)
THEN
  RESPONSE #100
    Shout(156)
    SetGlobal("SHOUTED","LOCALS",1)
END

IF
  Allegiance(Myself,ALLY)
  See([EVILCUTOFF])
  ActionListEmpty()
  Global("SHOUTED","LOCALS",0)
THEN
  RESPONSE #100
    Shout(156)
    SetGlobal("SHOUTED","LOCALS",1)
END

IF
  Heard([GOODCUTOFF],156)
  Allegiance(Myself,ALLY)
  !See(NearestEnemyOf(Myself))
THEN
  RESPONSE #100
    MoveToObject(LastHeardBy(Myself))
END

IF
  !GlobalTimerNotExpired("WHINED","LOCALS")
  Allegiance(Myself,ENEMY)
  HitBy([GOODCUTOFF],CRUSHING)
THEN
  RESPONSE #100
    SetGlobalTimer("WHINED","LOCALS",12)
    Shout(68)
    Continue()
END

