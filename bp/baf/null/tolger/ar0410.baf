IF
  Global("LavSpy","GLOBAL",1)
THEN
  RESPONSE #100
    StartCutSceneMode()
    MultiPlayerSync()
    Wait(2)
    SetGlobal("LavSpy","GLOBAL",2)
    CloseDoor("DOOR412B")
    Lock("DOOR412B")
    CloseDoor("DOOR0419")
    Lock("DOOR0419")
    CloseDoor("DOOR0420")
    Lock("DOOR0420")
    EndCutSceneMode()
END

IF
  Global("LavSpy","GLOBAL",2)
  OpenState("DOOR412B",TRUE)  // DOOR412B
THEN
  RESPONSE #100
    CloseDoor("DOOR412B")
    Lock("DOOR412B")
END

