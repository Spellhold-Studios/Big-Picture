IF
  HPGT("LAVOK",9)  // LAVOK
  Global("switch","AR0410",0)
THEN
  RESPONSE #100
    SetGlobal("switch","AR0410",1)
    TriggerActivation("TRAN0412b",FALSE)
    TriggerActivation("TRAN0419",FALSE)
    TriggerActivation("TRAN0420",FALSE)
END

IF
  Global("LavSpy","GLOBAL",3)
THEN
  RESPONSE #100
    SetGlobal("LavSpy","GLOBAL",4)
    TriggerActivation("TRAN0412b",TRUE)
    TriggerActivation("TRAN0419",TRUE)
    TriggerActivation("TRAN0420",TRUE)
    Unlock("DOOR412B")
    OpenDoor("DOOR412B")
    Unlock("DOOR0419")
    OpenDoor("DOOR0419")
    Unlock("DOOR0420")
    OpenDoor("DOOR0420")
END

