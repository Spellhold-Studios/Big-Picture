IF
    AttackedBy([PC],DEFAULT)
    Allegiance(Myself,NEUTRAL)
THEN
    RESPONSE #100
        Enemy()
END

IF
    Heard([0.0.ELF.0.SULDANESSALLAR],199)
    Allegiance(Myself,NEUTRAL)
THEN
    RESPONSE #100
        Enemy()
END

IF
    Allegiance(Myself,ENEMY)
THEN
    RESPONSE #100
        Shout(199)
        EscapeArea()
END

IF
    Detect([PC])
    See([ENEMY])
    Global("Scene2","AR2800",0)
    Global("Scene2b","AR2800",0)
THEN
    RESPONSE #100
        ClearAllActions()
        SetGlobal("Scene2","AR2800",1)
        StartCutSceneMode()
        StartCutScene("cut65a")
END

